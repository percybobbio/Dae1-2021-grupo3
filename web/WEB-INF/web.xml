<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>UserCineramaController</servlet-name>
        <servlet-class>com.cinerama.controllers.UserCineramaController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PeliculaCineramaController</servlet-name>
        <servlet-class>com.cinerama.controllers.PeliculaCineramaController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Validar</servlet-name>
        <servlet-class>com.cinerama.controllers.Validar</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Controlador</servlet-name>
        <servlet-class>com.cinerama.controllers.Controlador</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserCineramaController</servlet-name>
        <url-pattern>/usercineramacontroller</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PeliculaCineramaController</servlet-name>
        <url-pattern>/peliculacineramacontroller</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Validar</servlet-name>
        <url-pattern>/Validar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Controlador</servlet-name>
        <url-pattern>/Controlador</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
